//- Часть верхнего меню, навигация по сайту

include ../../mixin

-
    var userName = "Мария"
    var submenuItems = ["Личный кабинет", "История заказов", "Персональные предложения", "Выйти"]
    var icon_size = "49px"

nav.site_nav 
    ul.topmenu
        li.down(style="height: "+icon_size)
            a(href="")
                span.user-name= userName
                +icon("../../images/header_menu/personal.png", icon_size)
            ul.submenu
                li
                    a.submenu-personal(href="")
                        span(style="margin-right: 20px;")= userName
                        +icon("../../images/header_menu/personal.png", icon_size)
                each item in submenuItems
                    li 
                        a(href="")= item
        li#statistics-icon(style="height: "+icon_size)
            a(href="")
                +icon("../../images/header_menu/statistics.png", icon_size)
        li#favorite-icon(style="height: "+icon_size)
            a(href="")
                +icon("../../images/header_menu/favorite.png", icon_size)
        li(style="height: "+icon_size)
            a(href="")
                +icon("../../images/header_menu/buys.png", icon_size)
                +icon("../../images/header_menu/buys_count.png", "16px")(class="buys-count")
                //- img.buys-count(src="../../images/header_menu/buys_count.png", height="16px", width="16px")